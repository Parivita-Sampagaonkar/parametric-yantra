# Environment Configuration
# Copy this file to .env and update values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://yantra:yantra@localhost:5432/yantra
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=3600

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=15

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Object Storage (Cloudflare R2 or MinIO)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key
R2_BUCKET_NAME=yantra-exports
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-cdn-domain.com

# For local development with MinIO:
# R2_ENDPOINT=http://localhost:9000
# R2_ACCESS_KEY=minioadmin
# R2_SECRET_KEY=minioadmin

# File Export Settings
EXPORT_MAX_SIZE_MB=50
EXPORT_EXPIRY_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Astronomy/Ephemeris
EPHEMERIS_DATA_PATH=./data/ephemeris
WMM_DATA_PATH=./data/wmm
ENABLE_EPHEMERIS_CACHE=true

# Generation Limits
MAX_YANTRA_SCALE=1000.0
MIN_YANTRA_SCALE=0.1
MAX_CONCURRENT_GENERATIONS=5
GENERATION_TIMEOUT_SECONDS=300

# Feature Flags
ENABLE_AR_ENDPOINTS=true
ENABLE_COLLABORATIVE_MODE=false
ENABLE_CITIZEN_SCIENCE=false
ENABLE_AI_SUGGESTIONS=true

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1

# MapTiler (Optional - for enhanced maps)
MAPTILER_API_KEY=your-maptiler-api-key

# Typesense
TYPESENSE_API_KEY=xyz123
TYPESENSE_HOST=localhost:8108

# Frontend Environment Variables
# Create frontend/.env.local with these:
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MAPBOX_TOKEN=optional-mapbox-token